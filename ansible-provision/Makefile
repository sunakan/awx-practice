.PHONY: ping
ping:
	@ansible --inventory localhost, --connection local all -m ping

.PHONY: debug
debug:
	@ansible-playbook --inventory localhost, --connection local debug.yml

.PHONY: ansible
ansible:
	@ansible-playbook --inventory localhost, --connection local main.yml
